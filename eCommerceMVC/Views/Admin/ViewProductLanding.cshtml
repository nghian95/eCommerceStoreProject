@model eCommerceMVC.Models.Products

@{
    ViewData["Title"] = "ViewProductLanding";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>&nbsp; @TempData["Name"]</h2>

<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{
                        for (int i = 0; i <= (int)ViewData["Count"]; i++)
                        {
                            if (i == 0)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to=i class="active"></li>
                            }
                            else
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to=i></li>
                            }
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @{ for (int a = 0; a <= (int)ViewData["Count"]; a++)
                        {
                            string var = "ImageID" + a;
                            if (a == 0)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="@Url.Action("show", "image", new { id = (int)@ViewData[var] })" alt="First slide">
                                    @var
                                    @ViewData[@var]
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@Url.Action("show", "image", new { id = (int)@ViewData[var] })" alt="@a slide">
                                </div>
                            }
                        }
                    }
                    @*<div class="carousel-item active">
                        <img class="d-block w-100" src="@Url.Action("show", "image", new { id = ViewData["ImageID"] })" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="..." alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="..." alt="Third slide">
                    </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.SKU)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SKU)
                </dd>
                <dt>
