@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor

@model eCommerceMVC.Models.Products

@{
    ViewData["Title"] = "ViewProductLanding";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int count = Convert.ToInt32(httpContextAccessor.HttpContext.Request.Cookies["Count"]);
}

<h2>&nbsp; @TempData["Name"]</h2>

<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{
                        for (int i = 0; i <= count; i++)
                        {
                            if (i == 0)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to=i class="active"></li>
                            }
                            else
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to=i></li>
                            }
                        }
                    }
                </ol>
                @{ if (count == 0)
                    {
                        <div class="carousel-inner">
                            @{ for (int a = 0; a <= count; a++)
                                {
                                    string var = "ImageID" + a;
                                    if (a == 0)
                                    {
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" src="@Url.Action("show", "image", new { id = (int)@ViewData[var] })" alt="First slide">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="@Url.Action("show", "image", new { id = (int)@ViewData[var] })" alt="@a slide">
                                        </div>
                                    }
                                }
                            }
                            @*<div class="carousel-item active">
                            <img class="d-block w-100" src="@Url.Action("show", "image", new { id = ViewData["ImageID"] })" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="..." alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="..." alt="Third slide">
                            </div>*@
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    }
                }
            </div>
            <div class="row" style="margin-left:5px;margin-top:5px">
                <form method="post" enctype="multipart/form-data" asp-controller="Image" asp-action="Index">
                    <div class="form-group" style="margin-bottom: 10px;">
                        <p style="margin-bottom:5px;">Upload file</p>
                        <input class="form-control" name="files" type="file" style="padding-bottom:35px"/>
                    </div>
                    <div class="form-group" style="margin-top: 0px;padding-top:0px">
                        <input class="btn btn-success" type="submit" value="Upload" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.SKU)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SKU)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                @{ if (@Model.Quantity != null)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd>

                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                    }
                }
                @{ if (@Model.Description != null)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    }
                }
                @{ if (@Model.Price != null)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                    }
                }
                @{ if (@Model.CategoryId != null)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CategoryId)
                        </dd>
                    }
                }
                @{ if (@Model.Sale != null)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Sale)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Sale)
                        </dd>
                    }
                }
            </dl>
            <div>
                @Html.ActionLink("Edit", "EditProduct", Model) | 
                @Html.ActionLink("Delete Image", "DeleteImage", Model)
            </div>
        </div>
    </div>
</div>

