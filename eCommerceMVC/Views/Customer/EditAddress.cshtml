@model eCommerceMVC.Models.Users
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "EditAddress";
    string address = httpContextAccessor.HttpContext.Session.GetString("Address");
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div>
    <hr />
        <form asp-action="ViewCheckout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*@Html.TextBox("ShippingAddress", @httpContextAccessor.HttpContext.Session.GetString("Address"), )*@
                <b>New Shipping <label asp-for="Address" class="control-label"></label></b>
                <input asp-for="Address" id="Address" name="Address" value="@address" style="width:250px" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Address" />
            </div>
        </form>
</div>
